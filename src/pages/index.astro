---
import BouncingBall from '../components/BouncingBall.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<BouncingBall />
	<div class="title-overlay">
		<h1>旋转六边形弹跳球</h1>
		<p>拖动小球体验物理效果</p>
	</div>
</Layout>

<style>
	.title-overlay {
		position: fixed;
		top: 40px;
		left: 50%;
		transform: translateX(-50%);
		text-align: center;
		z-index: 10;
		pointer-events: none;
	}

	.title-overlay h1 {
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		font-size: 2.5rem;
		font-weight: 700;
		color: white;
		margin: 0;
		text-shadow: 
			0 0 10px rgba(255, 255, 255, 0.5),
			0 0 20px rgba(255, 255, 255, 0.3),
			0 2px 10px rgba(0, 0, 0, 0.3);
		letter-spacing: 2px;
		animation: titleGlow 3s ease-in-out infinite;
	}

	.title-overlay p {
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		font-size: 1rem;
		color: rgba(255, 255, 255, 0.8);
		margin-top: 10px;
		text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
		letter-spacing: 1px;
	}

	@keyframes titleGlow {
		0%, 100% {
			text-shadow: 
				0 0 10px rgba(255, 255, 255, 0.5),
				0 0 20px rgba(255, 255, 255, 0.3),
				0 2px 10px rgba(0, 0, 0, 0.3);
		}
		50% {
			text-shadow: 
				0 0 20px rgba(255, 255, 255, 0.8),
				0 0 30px rgba(255, 255, 255, 0.5),
				0 2px 10px rgba(0, 0, 0, 0.3);
		}
	}

	@media (max-width: 768px) {
		.title-overlay h1 {
			font-size: 1.8rem;
		}
		
		.title-overlay p {
			font-size: 0.9rem;
		}
	}

	@media (max-width: 480px) {
		.title-overlay {
			top: 20px;
		}

		.title-overlay h1 {
			font-size: 1.5rem;
		}
		
		.title-overlay p {
			font-size: 0.8rem;
		}
	}
</style>
